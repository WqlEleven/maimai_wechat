/* pages/goodsDetail/goodsDetail.wxss */
/*引入WxParse.css*/
@import "/wxParse/wxParse.wxss";
page{
  background-color: #eee;
  font-family: PingFang-SC-Bold;
  font-size: 44rpx;
  color: #333333;
  position: relative;
  height: 100%;
}
.top{
  width: 750rpx;
  height:190rpx;
  background-color: #fff;
  display: flex;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}
.left{
  width: 128rpx;
  height: 128rpx;
  border-radius: 8rpx; 
  margin-top: 32rpx;
  margin-left: 32rpx;
}
.left image{
  width: 128rpx;
  height: 128rpx;
  display: block;
}
.right{
  width: 528rpx;
  margin-top: 24rpx;
  margin-left: 32rpx;
  position: relative;
}
.right text{
  display: block;
}
.right .name{
  width: 528rpx;
  height: 60rpx;
  font-size: 32rpx;
  /* line-height: 60rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
}
.right .price{
  height: 74rpx;
  line-height: 74rpx;
  font-size:40rpx; 
  margin-top: 24rpx; 
}
.right .status{
  width: 90rpx;
  height: 48rpx;
  line-height: 47rpx;
  background-color: #E40F0F;
  border-radius: 8rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  top: 96rpx;
  right: 0;
  font-size: 32rpx;
}
/* 参数 */
.goodintro{
  width: 592rpx;
  min-height:100rpx; 
  margin:0 30rpx;
  background-color: #fff;
  border-radius:32rpx;
  margin-top: 222rpx;
  padding: 32rpx 48rpx;
  line-height: 80rpx;
}
/* 详情 */
.goodintro1{
  width: 100%;
  margin-top: 32rpx;
  background-color: #fff;
}
.blank{
  height: 200rpx;
}
/* 购买 */
.footer{
  width:528rpx;
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  background-color:#F1D500 ;
  font-size: 44rpx;
  border-radius: 56rpx;
  position: fixed;
  left: 112rpx;
  bottom: 48rpx;
  color: #622D00;
  box-shadow: 0 30rpx 60rpx -20rpx #F9DB54;
}