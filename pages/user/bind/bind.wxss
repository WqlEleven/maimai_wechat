/* pages/user/bind/bind.wxss */

page {
  background: #eee;
  width: 100%;
  overflow: hidden;
}

image {
  display: block;
}

.title {
  position: relative;
  border-bottom: solid 1px #eee;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #898989;
  padding-left: 4%;
  background: #fff;
}

.wrap {
  font-size: 30rpx;
}

.top-con, .head-con {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* .top-con .bg {
  width: 100%;
} */
.bg{
  width: 100%;
  height: 240rpx;
  /* position: absolute;top: 0;left: 0; */
  background: #edece8;
}
.head-con {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.head-con .head {
  display: flex;
  width: 120rpx;
  height: 120rpx;
  border: solid 8rpx #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.head-con .nick-name {
  font-size: 0.8em;
  margin-top: 10rpx;
}

.basicinfor {
  margin-top: 10rpx;
  background: #fff;
  padding: 0 30rpx;
  border-top: 1px solid #ddd;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.basicinfor .item {
  border-bottom: 1px solid #ddd;
  padding: 15rpx 0;
  position: relative;
  overflow: hidden;
}

.basicinfor .item:last-child {
  border: 0;
}

.basicinfor .item .fl {
  width: 160rpx;
  display: flex;
  font-size: 30rpx;
  color: 333333;
  line-height: 60rpx;
}

.basicinfor .item .fr {
  width: 500rpx;
  display: flex;
  font-size: 30rpx;
  color: 333333;
  line-height: 60rpx;
}

.basicinfor .item .fl image {
  width: 35rpx;
  margin-top: 15rpx;
  margin-right: 10px;
}

.basicinfor .item .fr input {
  height: 60rpx;
  line-height: 60rpx;
  width: 500rpx;
}

.basicinfor .item .codeBtn {
  width: 260rpx;
  background: #ff8d00;
  text-align: center;
  line-height: 92rpx;
  color: #fff;
  border: none;
  border-radius: 0;
  font-size: 28rpx;
  position: absolute;
  right: -5%;
  top: -1px;
}

.basicinfor .item .codeBtn::after {
  border: none;
}

.basicinfor .item .codeBtn.false {
  background: #ddd;
  color: #7a7a7a;
}

.button {
  width: 95%;
  margin: 60rpx auto 0;
  border-radius: 10rpx;
  background: #ff8d00;
  color: #fff;
  border: none;
}

.button-hover {
  background-color: #ff8d00;
}

.button::after {
  border: none;
}
