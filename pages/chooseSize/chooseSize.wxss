/* pages/chooseSize/chooseSize.wxss */
page{
  background-color: #eee;
  font-family: PingFang-SC-Bold;
  font-size: 44rpx;
  color: #333333;
}
.choose{
  height: 80rpx;
  width: 224rpx;
  line-height: 80rpx;
  font-size: 56rpx;
  margin: 32rpx 0 32rpx 32rpx;
}
page .choose:first-child{
  margin-top: 24rpx;
}
.color{
  width: 700rpx;
  padding-left: 50rpx;
  overflow: hidden;
}
.color .f_color{
  width: 188rpx;
  height: 188rpx;
  float: left;
  margin-right: 42rpx;
  margin-bottom: 32rpx;
}
.color .f_color .img{
  width: 138rpx;
  padding: 0 25rpx;
  height: 96rpx;
  background-color: #fff;
  border-radius:16rpx;
  overflow: hidden;
  position: relative;
}
.color .f_color image{
  width: 188rpx;
  height: 188rpx;
  position: absolute;
  top: -40%;
  left:0;
}
.color .f_color text{
  display: block;
  width: 204rpx;
  height: 60rpx;
  text-align: center;
  font-size:44rpx;
  line-height: 60rpx;
  margin-top: 32rpx;
}
.image_click{
  /* padding: 0 8rpx; */
  width: 188rpx;
  height: 188rpx;
  float: left;
  display: none;
  margin-right: 42rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}
.image_click image{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  border: 1rpx solid #F1D500;
}
.none{
  display: none;
}
.show{
  display: block;
}
/* 尺码 */
.size{
  width: 750rpx;
  overflow: hidden;
}
.f_sizer{
  width: 208rpx;
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  border-radius: 16rpx;
  background-color: #fff;
  float: left;
  margin-left: 32rpx;
  margin-bottom: 16rpx;
}
/* 数量 */
.num{
  width: 750rpx;
  overflow: hidden;
}
.f_num{
   width: 112rpx;
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  border-radius: 16rpx;
  background-color: #fff;
  float: left;
  margin-left: 32rpx;
  margin-bottom: 32rpx; 
}
.on {
  background-color:#F1D500;
  color: #622D00;
}
.num .open{
  width: 256rpx;
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  border-radius: 16rpx;
  background-color: #fff;
  float: left;
  margin-left: 32rpx;
  margin-bottom: 32rpx;
}
.num .open .content{
width: 10px;
height: 10px;
border:#333 solid ;
border-width: 4rpx 4rpx 0 0;
transform: rotate(135deg);
float: right;
margin-right: 48rpx;
margin-top: 42rpx;
}
.num .choosedNum{
  background-color: #F1D500; 
}
.blank{
  height: 200rpx;
}
/* 购买 */
.footer{
  width:408rpx;
  height: 112rpx;
  line-height: 112rpx;
  background-color:#F1D500 ;
  font-size: 44rpx;
  border-radius: 56rpx;
  position: fixed;
  left: 112rpx;
  bottom: 48rpx;
  overflow: hidden;
  padding:  0 60rpx;
  color: #643000;
  box-shadow: 0 30rpx 60rpx -20rpx #F9DB54;
}
.footer .f_left{
  float: left;
  font-size: 48rpx;
}
.footer .f_right{
  float: right;
}
.pointer{
  pointer-events:none;
  color: #ccc;
}