/* component/openSetting/openSetting.wxss */

.wrap {
  font-size: 30rpx;
}

.top-con, .head-con {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.top-con .bg {
  width: 100%;
}

.head-con {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #edece8
}

.head-con .head {
  display: flex;
  width: 120rpx;
  height: 120rpx;
  border: solid 8rpx #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.head-con .nick-name {
  font-size: 0.8em;
  margin-top: 10rpx;
}

.wrap .notice {
  padding: 30rpx 20rpx;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  text-align: center;
}

.wrap .btn {
  padding: 30rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.wrap button {
  font-size: 1em;
  width: 100%;
  background-color: #ff8d00;
}

.wrap button::after {
  display: none;
}
